---
import { Icon } from "astro-icon";

import { TAGS } from "src/data/tags";
import Badge from "./Badge.astro";

export interface Props {
	title: string;
	body: string;
	href: string;
	tags: string[];
}

const { href, title, body, tags } = Astro.props;
---

<li
	title={title}
	class="rounded-lg w-full card bg-neutral-content/5 shadow-xl"
>
	<div class="card-body">
		<a
			href={href}
			class="w-fit hover:text-accent/95 transition-colors"
		>
			<h2 class="card-title">
				{title}
				<Icon
					name="ic:baseline-arrow-right-alt"
					height="22"
					width="22"
				/>
			</h2>
		</a>
		<p class="card-actions">
			{body}
		</p>
		<div class="flex gap-2 flex-wrap">
			{
				tags.map((tag) => {
					return tag in TAGS ? (
						<Badge tag={TAGS[tag as keyof typeof TAGS]} />
					) : (
						<div class="flex gap-1 badge badge-outline">{tag}</div>
					);
				})
			}
		</div>
	</div>
</li>
