---
export interface Props {
  href: string;
  label: string;
}

import moon from "../assets/moon.svg";
import sun from "../assets/sun.svg";

const { href, label } = Astro.props;
---

<nav class="navbar bg-base-100 w-full pt-3 pr-4">
  <div class="flex-1">
    <a
      href={href}
      class="btn btn-sm btn-ghost normal-case text-xl"
    >
      {label}
    </a>
  </div>
  <div class="flex text-md gap-2">
    <span>
      More text but
      <span class="fancy-text">prettier</span>
    </span>
    <label class="swap swap-rotate">
      <input type="checkbox" />
      <img
        src={moon.src}
        tabindex="0"
        width="24"
        height="24"
        alt="Moon icon. Click enables dark mode"
        class="swap-off fill-current"
      />
      <img
        src={sun.src}
        tabindex="0"
        width="24"
        height="24"
        alt="Sun icon. Click enables light mode"
        class="swap-on fill-current"
      />
    </label>
  </div>
</nav>
