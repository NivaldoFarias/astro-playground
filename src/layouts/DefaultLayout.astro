---
import "../styles.css";

import Sidebar from "../components/Sidebar.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Home from "../components/Home.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-BR">
	<head>
		<script is:inline>
			if (localStorage.getItem("theme") === null) {
				document.documentElement.setAttribute("data-theme", "light");
			} else document.documentElement.setAttribute("data-theme", localStorage.getItem("theme"));
		</script>
		<script>
			import { themeChange } from "theme-change";
			themeChange();
		</script>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<meta
			name="author"
			content="Nivaldo Farias"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body class="relative flex flex-col justify-between w-screen min-h-screen pb-32">
		<div class="flex flex-col">
			<Navbar
				href="/repo/test"
				label="README"
			/>
			<div class="flex justify-center gap-6 pt-4 mx-auto">
				<Sidebar />
				<Home />
			</div>
		</div>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
</style>
