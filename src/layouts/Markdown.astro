---
import "../styles.css";

import Footer from "src/components/Footer.astro";
import Navbar from "src/components/Navbar.astro";

import type { MarkdownLayoutProps } from "astro";
type Props = MarkdownLayoutProps<{
  title: string;
  author: string;
  date: string;
}>;

const { frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>{frontmatter.title}</title>
  </head>
  <body class="w-screen min-h-screen relative pb-32">
    <div class="w-full flex flex-col gap-10">
      <Navbar
        href="/"
        label="Home"
      />
      <div class="prose dark:prose-invert prose-sm lg:prose mx-auto px-4">
        <slot />
      </div>
    </div>
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
  }
</style>
