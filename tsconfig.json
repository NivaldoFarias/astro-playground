{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    // Modules
    "baseUrl": "./",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    // Type Checking
    "strict": true,

    // Language and Environment
    "target": "esnext",

    // Interop Constraints
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"]
}
